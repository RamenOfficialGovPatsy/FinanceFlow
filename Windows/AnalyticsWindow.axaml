<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="using:FinanceFlow.Views"
        x:Class="FinanceFlow.Windows.AnalyticsWindow"
        
        Title="Аналитика"
        Width="800" Height="750"
        
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        
        
        ShowInTaskbar="False"
        
        Icon="avares://FinanceFlow/Assets/Images/app_icon.ico"
        FontFamily="{StaticResource ManropeFont}"
        
        Background="Transparent"
        TransparencyLevelHint="AcrylicBlur"
        ExtendClientAreaToDecorationsHint="True">

    <Border Background="{StaticResource AppBackground}" 
            CornerRadius="12" 
            BorderBrush="{StaticResource AppBorderBrush}" 
            BorderThickness="1"
            Padding="0">
        
        <views:AnalyticsView />
        
    </Border>
    
</Window>